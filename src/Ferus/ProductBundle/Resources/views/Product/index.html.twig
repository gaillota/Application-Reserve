{% extends '::base.html.twig' %}

{% block toolbar %}
    <a class="left" data-toggle="side-menu">
        <i class="fa fa-bars"></i>
    </a>
    <a class="right" data-toggle="remove">
        Suppr
    </a>
    Produits
{% endblock %}

{% block body %}
    <form class="search-form" action="{{ path('ferus_products_new') }}" method="get">
        <input type="text" placeholder="Nouveau" name="name">
    </form>
    <ul>
        {% for product in products %}
            <li data-remove="lol">
                <a href="{{ path('ferus_products_show', {id:product.id}) }}">
                    {{ product }}
                    <span class="label">{{ stocks[product.id] }}</span>
                    <i class="fa fa-chevron-right"></i>
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}