{% extends '::base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('ferus_previs') }}">Prévis</a></li>
    <li class="active">Modifier un prévis</li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 text-center">
            <h1><i class="fa fa-edit"></i> Modifier un prévis</h1>
            <hr/>
        </div>
    </div>
    <div class="row" style="margin-bottom: 20px;">
        <div class="col-xs-1 col-lg-offset-3 col-md-offset-2 col-sm-offset-1">
            <a class="btn btn-default btn-xs" href="{{ path('ferus_previs_show', {'id': previs.id }) }}">
                <i class="fa fa-arrow-left"></i> Retour au prévis
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {% include 'FerusEventBundle:Previs:form.html.twig' %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/form/collection.js') }}"></script>
{% endblock %}