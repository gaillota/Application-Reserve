{% extends '::base.html.twig' %}

{% block title %}Administration - {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-inverse">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('ferus_product_admin') }}" style="padding: 0; margin-left: 0;">
                    <img src="{{ asset('img/loginverse.png') }}" alt="Logo"/>
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="{{ path('ferus_product_admin_historical') }}">
                            <i class="fa fa-clock-o"></i> Historique des actions
                        </a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li>
                        <a href="{{ path('ferus_user_admin') }}">
                            <i class="fa fa-users"></i> Gestion des utilisateurs
                        </a>
                    </li>
                    {% endif %}
                    {#<li class="dropdown">#}
                        {#<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">#}
                            {#<i class="fa fa-list-alt"></i><span class="hidden-sm"> Prévis</span> <span class="caret"></span>#}
                        {#</a>#}
                        {#<ul class="dropdown-menu" role="menu">#}
                            {#<li><a href="{{ path('ferus_previs_new') }}"><i class="fa fa-plus"></i> Créer un prévis</a></li>#}
                            {#<li class="divider"></li>#}
                            {#<li><a href="{{ path('ferus_previs') }}"><i class="fa fa-list-ul"></i> Tous les prévis</a></li>#}
                        {#</ul>#}
                    {#</li>#}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            <i class="fa fa-user"></i> {{ app.user.firstName }} {{ app.user.lastName }} <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="{{ path('home') }}">
                                    <i class="fa fa-reply-all"></i> Sortir de l'administration
                                </a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="{{ path('fos_user_security_logout') }}">
                                    <i class="fa fa-sign-out"></i> Déconnexion
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
{% endblock %}

{% block body %}
    {% for label, flashes in app.session.flashbag.all %}
        {% for flash in flashes %}
            <div class="alert alert-{{ label }} alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {{ flash }}
            </div>
        {% endfor %}
    {% endfor %}

    <ol class="breadcrumb">
        {% block breadcrumb %}
            {% if is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('ferus_product_admin') }}">Administration</a></li>
            {% else %}
            <li>Administration</li>
            {% endif %}
        {% endblock %}
    </ol>

    {% block content %}{% endblock %}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
{% endblock %}